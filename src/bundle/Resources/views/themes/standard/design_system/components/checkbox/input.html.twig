{% extends '@IbexaDesignSystemTwig/themes/standard/design_system/partials/base_choice_input.html.twig' %}

{% set class = html_classes('ids-checkbox', attributes.render('class') ?? '') %}

{% block content %}
    {% set input_classes =
        html_classes(
            input_classes,
            {
                'ids-input--indeterminate': indeterminate
            },
        )
    %}

    <input
        class="{{ input_classes }}"
        {{
            attributes.defaults({
                checked,
                disabled,
                name,
                required,
                type,
                value,
            })
        }}
    />
{% endblock content %}
